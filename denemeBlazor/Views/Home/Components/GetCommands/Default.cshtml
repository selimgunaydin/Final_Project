@model List<CommentListDto>

<p class="font-bold text-3xl text-gray-800 px-2 border-l-4 border-red-600 mb-3 mt-6">Yorumlar</p>
@foreach (var comment in Model)
{
    <div class="flex flex-col border w-3/5 p-4 mt-2">
        <p class="text-xl "><bolderTagHelper bold-data="@comment.AppUser.Username"></bolderTagHelper></p>
        <p class="mt-2">@comment.Content_</p>
        <p class="text-gray-500 mt-2">@comment.CreatedTime</p>
    </div>

}